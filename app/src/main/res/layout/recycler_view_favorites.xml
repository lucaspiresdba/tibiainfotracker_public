<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_8"
    android:layout_marginBottom="@dimen/margin_8"
    android:background="@drawable/rounded_edit_text"
    android:orientation="horizontal"
    android:padding="@dimen/margin_8">

    <TextView
        android:id="@+id/textViewFavoiteChar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:fontFamily="@font/catamaran_semibold"
        android:gravity="center"
        android:textColor="@color/gray_2D3A40"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewFavoriteChar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Fu'jin" />

    <ImageView
        android:id="@+id/imageViewFavoriteChar"
        android:layout_width="@dimen/mid_icon_size"
        android:layout_height="@dimen/mid_icon_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_touch"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFavoiteChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewFavoiteChar"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>